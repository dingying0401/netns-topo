global
  # maxconn 4096
  daemon
  user root
  group root
  log 127.0.0.1 local0 debug
  stats socket /tmp/haproxy-outer.sock mode 600 level user
  stats timeout 2m
  pidfile /tmp/haproxy-outer.pid

defaults
  # maxconn 4096
  option httplog
  log global
  option redispatch
  timeout connect 5s
  timeout client 30s
  timeout server 30s
  timeout http-request 10s
  timeout tunnel 1h


frontend public
  bind :80
  mode http
  tcp-request inspect-delay 5s
  tcp-request content accept if HTTP

  default_backend be_default


backend be_default
  mode http
  option redispatch
  option forwardfor
  balance roundrobin
  option httpchk GET / HTTP/1.1\r\nHost:\ www.abc.com
  http-check expect rstatus 200
  timeout check 5000ms
  server lb1 10.0.0.7:80 check inter 5000ms weight 100
  server lb2 10.0.0.8:80 check inter 5000ms weight 100
  server lb3 10.0.0.9:80 check inter 5000ms weight 100
