global
  # maxconn 4096
  daemon
  user root
  group root
  log 127.0.0.1 local0 debug
  stats socket /tmp/haproxy-outer.sock mode 600 level user
  stats timeout 2m
  pidfile /tmp/haproxy-outer.pid

defaults
  # maxconn 4096
  option httplog
  log global
  option redispatch
  timeout connect 5s
  timeout client 30s
  timeout server 30s
  timeout http-request 10s
  timeout tunnel 1h


frontend public
  bind :80
  mode http
  tcp-request inspect-delay 5s
  tcp-request content accept if HTTP

  default_backend be_default


backend be_default
  mode http
  option redispatch
  option forwardfor
  balance leastconn
  cookie c89a95a1e6e8c5c4b990f84520189f93 insert indirect nocache httponly
  timeout check 5000ms
  server inner_haproxy 20.0.0.2:80 check inter 5000ms cookie c4227bef43616d70679c2cc2f738962b weight 100
